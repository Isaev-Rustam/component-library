{
  "compilerOptions": {
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "target": "es5", // Поддержка старых браузеров
    "module": "commonjs", // Модули CommonJS для Node.js
    "declaration": true, // Генерация файлов типов
    "outDir": "./dist", // Директория вывода
    "strict": true, // Строгий режим проверки
    "esModuleInterop": true // Совместимость с ES6 модулями
  },
  "include": ["src/**/*"], // Включение всех файлов в папке src
  "exclude": ["node_modules"] // Исключение node_modules
}
